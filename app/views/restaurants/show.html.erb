<h1><%= @restaurant.name %></h1>

<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>

<h2><% @restaurant.reviews.each do |review| %>
  <p><%= review.rating %>/5 - <%= review.content %></p>
<% end %>
</h2>
